# n8n Configuration
N8N_PORT=5678
N8N_PROTOCOL=http
NODE_ENV=production

# Webhook URLs (update with your ngrok or public URL)
WEBHOOK_URL=https://your-domain.ngrok-free.app
WEBHOOK_TUNNEL_URL=https://your-domain.ngrok-free.app

# Database Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=n8n

# n8n Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# Timezone
TZ=Asia/Ho_Chi_Minh

# Telegram Configuration (for workflows)
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Notion Configuration (for newsletter aggregator workflow)
# Create a database with properties: URL (url), Source (select), Tags (multi-select), Status (select), Saved At (date)
NOTION_DATABASE_ID=your_notion_database_id

# Webhook URL for external access (optional, defaults to localhost)
N8N_WEBHOOK_URL=http://localhost:5678

